<% if current_user.active_relationships.empty? %>
  <p>You are not following anyone yet.</p>
<% else %>
  <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
               html: { method: :delete },
               remote: true) do |f| %>
    <%= f.submit "Unfollow", class: "btn" %>
  <% end %>
<% end %>
